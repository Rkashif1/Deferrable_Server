<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Global Declarations
bool aperiodicTaskAvailable = false; // Flag for aperiodic task availability

// Instantiate templates
DeferrableServer ds = DeferrableServer();
PeriodicTask pt = PeriodicTask();
AperiodicTask at = AperiodicTask();

// Channels for synchronization
chan serve, start, complete;

system ds, pt, at;
</declaration>
	<template>
		<name x="5" y="5">Defferable_Server</name>
		<declaration>clock t;
int capacity = 10; // Example server capacity
const int maxCapacity = 10; // Maximum server capacity
const int period = 50; // Server period
</declaration>
		<location id="id0" x="0" y="0">
			<name x="-34" y="-34">Idle</name>
		</location>
		<location id="id1" x="612" y="-8">
			<name x="602" y="-42">Serving</name>
		</location>
		<location id="id2" x="204" y="212">
			<name x="170" y="229">Replenish</name>
		</location>
		<init ref="id0"/>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="guard" x="-110" y="178">t == period</label>
			<label kind="assignment" x="-161" y="221">capacity = maxCapacity; t = 0;</label>
			<nail x="-187" y="195"/>
		</transition>
		<transition id="id4">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="195" y="-127">t&gt;=1</label>
			<label kind="assignment" x="195" y="-93">t=0</label>
			<nail x="102" y="-127"/>
		</transition>
		<transition id="id5">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="guard" x="102" y="85">serverClock = 0</label>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
		</transition>
		<transition id="id7">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="110" y="-25">capacity &gt; 0 &amp;&amp; aperiodicTaskAvailable</label>
			<label kind="assignment" x="178" y="0">capacity -= 1; t = 0;</label>
		</transition>
	</template>
	<template>
		<name>Periodic_Task</name>
		<declaration>clock t;
param int executionTime;
param int period;
</declaration>
		<location id="id8" x="-263" y="-17">
			<name x="-288" y="0">Waiting</name>
		</location>
		<location id="id9" x="289" y="-25">
			<name x="264" y="-8">Running</name>
		</location>
		<init ref="id8"/>
		<transition id="id10">
			<source ref="id9"/>
			<target ref="id8"/>
			<label kind="guard" x="-68" y="-238">t &gt;= executionTime</label>
			<label kind="assignment" x="-17" y="-187">t = 0</label>
			<nail x="0" y="-212"/>
		</transition>
		<transition id="id11">
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="guard" x="-42" y="-51">t == period</label>
			<label kind="assignment" x="-8" y="-17">t = 0</label>
		</transition>
	</template>
	<template>
		<name>Aperiodic_Task</name>
		<declaration>clock t;
param int executionTime;
</declaration>
		<location id="id12" x="-340" y="-17">
			<name x="-365" y="0">Waiting</name>
		</location>
		<location id="id13" x="256" y="-25">
			<name x="238" y="-8">Handled</name>
		</location>
		<init ref="id12"/>
		<transition id="id14">
			<source ref="id13"/>
			<target ref="id12"/>
			<label kind="guard" x="-144" y="-263">t &gt;= executionTime</label>
			<label kind="assignment" x="-93" y="-212">t = 0</label>
			<nail x="-76" y="-238"/>
		</transition>
		<transition id="id15">
			<source ref="id12"/>
			<target ref="id13"/>
			<label kind="guard" x="-161" y="-51">aperiodicTaskAvailable</label>
			<label kind="assignment" x="-195" y="-17">aperiodicTaskAvailable = false</label>
		</transition>
	</template>
	<system> system DeferrableServer, PeriodicTask, AperiodicTask;
clock systemClock;

// Initial values for clocks
init systemClock := 0;

// Parameters for templates
const int executionTime1 = 20; // Example value for execution time of PeriodicTask
const int period1 = 50; // Example value for period of PeriodicTask
const int executionTime2 = 30; // Example value for execution time of AperiodicTask
</system>
	<queries>
		<query>
			<formula>A[] PeriodicTask.Waiting imply t &lt;= period
E&lt;&gt; DeferrableServer.Serving
</formula>
			<comment/>
		</query>
	</queries>
</nta>
